    window.APP_FACTORY_TYPE2_validateTime = function () {
        const start = $(`[name='DROPDOWN_FACTORY_TYPE2_START_WORKING_TIME_DD']`).val().split(":");
        const end = $(`[name='DROPDOWN_FACTORY_TYPE2_END_WORKING_TIME_DD']`).val().split(":");

        const startValue = parseInt(start[0]) * 60 + parseInt(start[1]);
        const endValue = parseInt(end[0]) * 60 + parseInt(end[1]);

        if (startValue >= endValue) {
            return false;
        }

        return true;
    }

    function isDec(obj)
    {
        $(obj).val($(obj).val().replace(/[^0-9\.]/g, ''));
        if ((event.which != 46 || $(obj).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57))
        {
            event.preventDefault();
        }
    }

    function isInt(obj)
    {
        $(obj).val($(obj).val().replace(/[^\d].+/, ""));
        if ((event.which != 46 || $(obj).val().indexOf('.') != -1) && (event.which < 48 || event.which > 57))
        {
            event.preventDefault();
        }
    }

    function validFormat(parmStr)
    {
        try {
            var str = parmStr;
            var count = 0;
            var newStr;
            var foundDot = str.includes(".");

            for (var i = 0; i < str.length; i++) {
                if (str.charAt(i) == "0") {
                    count = count + 1;
                }
                else { break; }
            }

            if (count == 0 && !foundDot) {
                newStr = str;
            }

            if (count == 0 && foundDot) {
                newStr = str;
                var res = newStr.split(".");
                var n = res[0].length;
                if (n == 0) {
                    newStr = "0." + res[1];
                }
            }

            if (count > 0 && !foundDot) {
                newStr = str.substr(count, str.length);
            }

            if (count == 1 && foundDot) {
                var res = str.split(".");
                var n = res[0];
                if (n == "0") {
                    newStr = str;
                }
            }

            if (count == 1 && foundDot) {
                var res = str.split(".");
                var n = res[0].length;
                if (n > 1) {
                    newStr = str.substr(1, str.length);;
                }
            }

            if (count > 0 && foundDot) {
                var res = str.split(".");
                var n = res[0].length;
                if (n > 1) {
                    newStr = str.substr(count, str.length);;
                }
                var x = newStr.split(".");
                var y = x[0].length;
                if (y == 0) {
                    newStr = "0." + x[1];
                }
            }

            if (foundDot) {
                var m = newStr.split(".");
                var mm = m[1].length;
                if (mm == 0) {
                    newStr = newStr + "0";
                }
            }
        }
        catch (er)
        {
            alert(er.message);
        }
        return newStr;
    }

