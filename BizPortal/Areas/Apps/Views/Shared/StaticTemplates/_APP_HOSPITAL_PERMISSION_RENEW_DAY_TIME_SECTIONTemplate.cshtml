        <div class="col-md-4">
            <label>@BizPortal.Resources.PermitResource.RESOURCE_APP_HOSPITAL_PERMISSION_RENEW.APP_HOSPITAL_PERMISSION_RENEW_DAY_TIME_SECTION_DAY :</label>
            {{this.DROPDOWN_APP_HOSPITAL_PERMISSION_RENEW_DAY_TIME_SECTION_DAY_TEXT}}
