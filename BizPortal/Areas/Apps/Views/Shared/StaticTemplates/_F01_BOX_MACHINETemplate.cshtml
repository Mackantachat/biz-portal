@using BizPortal.Utils.Helpers
@model BizPortal.DAL.MongoDB.FormSection
<script id="@(Model.Section)Template" type="text/x-handlebars-template">
    {{#xif " data.length > 0 " }}
    <div class="row">
        <div class="col-md-5">
            <label>@BizPortal.Resources.Apps_SingleForm.TYPE_OF_MACHINE :</label>
        </div>
        <div class="col-md-4">
            <label>@BizPortal.Resources.Apps_SingleForm.MACHINE_DRINK_AND_FOOD_POWER :</label>
        </div>
        <div class="col-md-3">
            <label>@BizPortal.Resources.Apps_SingleForm.MACHINE_DRINK_AND_FOOD_AMOUNT :</label>
        </div>
    </div>
    {{#each data}}

    <div class="row form-group pt10 pb10" style="margin: 0 0 5px 0 !important; border:solid 1px #000000; border-radius: 4px;">
        <div class="col-md-5">
            <p class="bold form-control-static">{{this.TYPE_OF_MACHINE}}</p>
        </div>
        <div class="col-md-4">
            <p class="bold form-control-static">{{this.MACHINE_DRINK_AND_FOOD_POWER}}</p>
        </div>
        <div class="col-md-3">
            <p class="bold form-control-static">{{this.MACHINE_DRINK_AND_FOOD_AMOUNT}}</p>
        </div>
    </div>

    {{/each}}
    {{else}}
    <div class="row form-group pt10 pb10" style="margin: 0 0 5px 0 !important; border:solid 1px #000000; border-radius: 4px;">
        <div class="col-md-12 text-center">
            ไม่มีข้อมูลอุปกรณ์ เครื่องมือ เครื่องจักร ที่ใช้ในการประกอบการ
        </div>
    </div>
    {{/xif}}

</script>
