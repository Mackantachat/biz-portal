@using BizPortal.Utils.Helpers

<script id="APP_ORGANIC_PLANT_PRODUCTION_NEW_INFORMATION_SECTIONTemplate" type="text/x-handlebars-template">
    {{#xif " data.length > 0 " }}
    {{#each data}}

    <div class="row form-group pt10 pb10" style="margin: 0 0 5px 0 !important; border:solid 1px #000000; border-radius: 4px;">

        <div class="row">

            <div class="col-md-4">
                <label>ชนิดพืช :</label>
                {{ this.AJAX_DROPDOWN_APP_ORGANIC_PLANT_PRODUCTION_NEW_KIND_OF_PLANT_TEXT }}
            </div>

            <div class="col-md-4">
                <label>ขนาดพื้นที่ (ไร่) :</label>
                {{ this.APP_ORGANIC_PLANT_PRODUCTION_NEW_AREA_SIZE }}
            </div>

            <div class="col-md-4">
                <label>จำนวนต้น (เฉพาะไม้ผล) :</label>
                {{ this.APP_ORGANIC_PLANT_PRODUCTION_NEW_NUMBER_OF_TREE }}
            </div>

        </div>

        <div class="row">

            <div class="col-md-4">
                <label>จำนวนรอบการผลิต/ปี :</label>
                {{ this.APP_ORGANIC_PLANT_PRODUCTION_NEW_NUMBER_OF_YEAR }}
            </div>

            <div class="col-md-4">
                <label>ช่วงการผลิต (เดือนเริ่มต้น) :</label>
                {{ this.DROPDOWN_APP_ORGANIC_PLANT_PRODUCTION_NEW_RANK_START_TEXT }}
            </div>

            <div class="col-md-4">
                <label>ช่วงการผลิต (เดือนสิ้นสุด) :</label>
                {{ this.DROPDOWN_APP_ORGANIC_PLANT_PRODUCTION_NEW_RANK_STOP_TEXT }}
            </div>

        </div>

        <div class="row">

            <div class="col-md-4">
                <label>เดือนที่คาดว่าจะเก็บเกี่ยว :</label>
                {{ this.APP_ORGANIC_PLANT_PRODUCTION_NEW_ESTIMATE_HARVEST }}
            </div>

            <div class="col-md-6">
                <label>ปริมาณผลผลิตที่คาดว่าจะได้รับ (กิโลกรัม) :</label>
                {{ this.APP_ORGANIC_PLANT_PRODUCTION_NEW_ESTIMATE_VOLUME_OF_HARVEST }}
            </div>

        </div>

    </div>

    {{/each}}
    {{else}}
    <div class="row form-group pt10 pb10" style="margin: 0 0 5px 0 !important; border:solid 1px #000000; border-radius: 4px;">
        <div class="col-md-12 text-center">
            ไม่พบข้อมูล
        </div>
    </div>
    {{/xif}}
</script>