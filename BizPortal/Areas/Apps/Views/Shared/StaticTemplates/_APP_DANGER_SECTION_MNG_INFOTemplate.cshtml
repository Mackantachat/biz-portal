        </div>
        <div class="col-md-2 pl5">
            <button type="button" class="btn btn-danger" onclick="singleForm.functions.removeArrayObj(singleForm.variables.arrObj{{../section}}, {{ARR_IDX}})">ลบรายการ</button>
        </div>*@
        <div class="col-md-3"></div>
        <div class="col-md-9">
            <span class="bold form-control-static">ชื่อ:</span>
            <span class="form-control-static">{{this.DROPDOWN_MANAGER_TITLE_PREFIX_TEXT}} {{this.MANAGER_FIRSTNAME}} {{this.MANAGER_LASTNAME}}</span>
        </div>

        <div class="col-md-3"></div>
        <div class="col-md-9">
            <div>
                <span class="bold form-control-static">อายุ:</span>
                <span class="form-control-static">{{this.MANAGER_AGE}}</span>
                <span class="bold form-control-static">ปี</span>
            </div>
            <div>
                <span class="bold form-control-static">สัญชาติ:</span>
                <span class="form-control-static">{{this.DROPDOWN_MANAGER_NATIONALITY_TEXT}}</span>
            </div>
        </div>

        <div class="col-md-3"></div>
        <div class="col-md-9">
            <div>
                <span class="bold form-control-static">เลขบัตรประจำตัวประชาชน 13 หลัก:</span>
                <span class="form-control-static">{{this.MANAGER_CITIZEN_ID}}</span>
            </div>
        </div>

        <div class="col-md-3"></div>
        <div class="col-md-9">
            <div>
                <span class="bold form-control-static">เลขที่:</span>
                <span class="form-control-static">{{this.ADDRESS_MANAGER_CITIZEN_ADDRESS}}</span>

                {{#if this.ADDRESS_MOO_MANAGER_CITIZEN_ADDRESS}}
                <span class="bold form-control-static">หมู่ที่:</span>
                <span class="form-control-static">{{this.ADDRESS_MOO_MANAGER_CITIZEN_ADDRESS}}</span>
                {{/if}}

                {{#if this.ADDRESS_VILLAGE_MANAGER_CITIZEN_ADDRESS}}
                <span class="bold form-control-static">หมู่บ้าน:</span>
                <span class="form-control-static">{{this.ADDRESS_VILLAGE_MANAGER_CITIZEN_ADDRESS}}</span>
                {{/if}}

                {{#if this.ADDRESS_SOI_MANAGER_CITIZEN_ADDRESS}}
                <span class="bold form-control-static">ตรอก/ซอย:</span>
                <span class="form-control-static">{{this.ADDRESS_SOI_MANAGER_CITIZEN_ADDRESS}}</span>
                {{/if}}


                {{#if this.ADDRESS_BUILDING_MANAGER_CITIZEN_ADDRESS}}
