                <span class="form-control-static">{{this.ADDRESS_ROOMNO_MANAGER_CITIZEN_ADDRESS}}</span>
                {{/if}}


                {{#if this.ADDRESS_FLOOR_MANAGER_CITIZEN_ADDRESS}}
                <span class="bold form-control-static">ชั้น:</span>
                <span class="form-control-static">{{this.ADDRESS_FLOOR_MANAGER_CITIZEN_ADDRESS}}</span>
                {{/if}}


                {{#if this.ADDRESS_ROAD_MANAGER_CITIZEN_ADDRESS}}
                <span class="bold form-control-static">ถนน:</span>
                <span class="form-control-static">{{this.ADDRESS_ROAD_MANAGER_CITIZEN_ADDRESS}}</span>
                {{/if}}

                <span class="bold form-control-static">ตำบล/แขวง:</span>
                <span class="form-control-static">{{this.ADDRESS_TUMBOL_MANAGER_CITIZEN_ADDRESS_TEXT}}</span>

                <span class="bold form-control-static">อำเภอ/เขต:</span>
                <span class="form-control-static">{{this.ADDRESS_AMPHUR_MANAGER_CITIZEN_ADDRESS_TEXT}}</span>

                <span class="bold form-control-static">จังหวัด:</span>
                <span class="form-control-static">{{this.ADDRESS_PROVINCE_MANAGER_CITIZEN_ADDRESS_TEXT}}</span>

