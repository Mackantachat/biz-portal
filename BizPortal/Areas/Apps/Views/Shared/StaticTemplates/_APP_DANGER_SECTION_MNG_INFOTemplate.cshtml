        </div>
        <div class="col-md-3"></div>
        <div class="col-md-9">
            <div>
                <span class="bold form-control-static">โทรศัพท์:</span>
                <span class="form-control-static">{{this.ADDRESS_TELEPHONE_MANAGER_CITIZEN_ADDRESS}}</span>

                {{#if this.ADDRESS_TELEPHONE_EXT_MANAGER_CITIZEN_ADDRESS}}
                <span class="bold form-control-static">ต่อ:</span>
                <span class="form-control-static">{{this.ADDRESS_TELEPHONE_EXT_MANAGER_CITIZEN_ADDRESS}}</span>
                {{/if}}
            </div>
        </div>

        {{#if this.ADDRESS_FAX_MANAGER_CITIZEN_ADDRESS}}
        <div class="col-md-3"></div>
        <div class="col-md-9">
            <span class="bold form-control-static">โทรสาร:</span>
            <sapn class="form-control-static">{{this.ADDRESS_FAX_MANAGER_CITIZEN_ADDRESS}}</sapn>
        </div>
        {{/if}}

        {{#if this.MANAGER_EMAIL}}
        <div class="col-md-3"></div>
        <div class="col-md-9">
            <span class="bold form-control-static">อีเมล:</span>
            <span class="form-control-static">{{this.MANAGER_EMAIL}}</span>
        </div>
        {{/if}}
