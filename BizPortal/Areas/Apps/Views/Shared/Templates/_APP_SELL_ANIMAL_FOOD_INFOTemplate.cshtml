@using BizPortal.Utils.Helpers
<script id="APP_SELL_ANIMAL_FOOD_INFOTemplate" type="text/x-handlebars-template">
    {{#xif " data.length > 0 " }}
    {{#each data}}

    <div class="row form-group pt10 pb10" style="margin: 0 0 5px 0 !important; border:solid 1px #000000; border-radius: 4px;">
        <div class="col-md-8">
            <label>@BizPortal.Resources.Apps_SingleForm.SELL_ANIMAL_FOOD_CATEGORY :</label>
            {{this.DROPDOWN_SELL_ANIMAL_FOOD_CATEGORY_TEXT}}
            <br />
            <label>@BizPortal.Resources.Apps_SingleForm.SELL_ANIMAL_FOOD_TYPE_MATERIAL :</label>
            {{#xif " this.DROPDOWN_SELL_ANIMAL_FOOD_CATEGORY == 'material' " }}
                {{this.DROPDOWN_SELL_ANIMAL_FOOD_TYPE_MATERIAL_TEXT}}
            {{else}}
                {{#xif " this.DROPDOWN_SELL_ANIMAL_FOOD_CATEGORY == 'milk' " }}
                    {{this.DROPDOWN_SELL_ANIMAL_FOOD_TYPE_MILK_TEXT}}
                {{else}}
                    {{#xif " this.DROPDOWN_SELL_ANIMAL_FOOD_CATEGORY == 'mixed' " }}
                        {{this.DROPDOWN_SELL_ANIMAL_FOOD_TYPE_MIXED_TEXT}}
                    {{else}}
                        {{this.DROPDOWN_SELL_ANIMAL_FOOD_TYPE_SUPPLEMENT_TEXT}}
                    {{/xif}}
                {{/xif}}
            {{/xif}}
            <br/>
            <label>@BizPortal.Resources.Apps_SingleForm.SELL_ANIMAL_FOOD_PRODUCER :</label>
            {{this.SELL_ANIMAL_FOOD_PRODUCER}}
        </div>
        
        <div class="col-md-2 pr5">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-backdrop="static" data-target="#MODAL_{{../section}}" onclick="singleForm.functions.editDataArrayObj(singleForm.variables.arrObj{{../section}}, {{ARR_IDX}})">แก้ไขข้อมูล</button>
        </div>
        <div class="col-md-2 pl5">
            <button type="button" class="btn btn-danger" onclick="singleForm.functions.removeArrayObj(singleForm.variables.arrObj{{../section}}, {{ARR_IDX}})">ลบรายการ</button>
        </div>
    </div>

    {{/each}}
    {{else}}
    <div class="row form-group pt10 pb10" style="margin: 0 0 5px 0 !important; border:solid 1px #000000; border-radius: 4px;">
        <div class="col-md-12 text-center">
            @Html.Raw(ResourceHelper.GetResourceWordWithDefault(Model.EmptyDataMessage, "Apps_SingleForm_Template", Model.EmptyDataMessage))
        </div>
    </div>
    {{/xif}}

</script>
