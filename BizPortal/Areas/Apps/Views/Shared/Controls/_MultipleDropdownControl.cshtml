@using BizPortal.DAL.MongoDB
@using BizPortal.ViewModels.ControlData
@model FormControl

<div class="row">
    @foreach (var dropdown in Model.MultipleDropdown)
    {
        <div class="col-md-12 mt5 mb5">
            <select class="form-control" id="@string.Format("dropdown_{0}_{1}", dropdown.DropdownName, Model.ClientID)" name="@string.Format("DROPDOWN_{0}_{1}", dropdown.DropdownName, Model.DataKey)">
                <option></option>
            </select>
        </div>
    }
</div>



<script type="text/javascript">
    $(function () {
        @foreach (var dropdown in Model.MultipleDropdown)
        {
            <text>
        $("#@string.Format("dropdown_{0}_{1}", dropdown.DropdownName, Model.ClientID)").select2({
            data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(dropdown.Select2Opt)),
            allowClear: true,
            width: '100%'
        });
        </text>
        }

    });
</script>
