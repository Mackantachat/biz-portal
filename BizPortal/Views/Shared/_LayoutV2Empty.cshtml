    <script type="text/javascript">
        $(function () {
            calert('@BizPortalSetting.ALERT_COOKIE');
            cmodal('@BizPortalSetting.MODAL_COOKIE');

            var containerheight = 0;

            if ($('.header').css('display') != 'none') {
                containerheight = containerheight + $('.header').height();
            }

            if ($('.navbar').css('display') != 'none') {
                containerheight = containerheight + $('.navbar').height();
            }

            if ($('.breadcrumb').css('display') != 'none') {
                containerheight = containerheight + $('.breadcrumb').height();
            }

            if ($('.end').css('display') != 'none') {
                containerheight = containerheight + $('.end').height();
            }

            $('#pagelist-body').css('min-height', ($('body').height() - containerheight) + 'px');
        });
    </script>



