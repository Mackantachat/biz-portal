@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>ศูนย์กลางบริการภาครัฐเพื่อภาคธุรกิจ</title>

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-19394801-61', 'auto');
        ga('send', 'pageview');

    </script>

    @Styles.Render("~/Content/css")

    <style type="text/css">
        html, body {
            width: 100%;
            height: 100%;
            background-color: #fece12;
        }

        .background {
            display: table;
            position: relative;
            width: 100%;
            height: 100%;
            background: url(@Url.Content("~/Content/Images/covers/cover_10_edit.jpg")) no-repeat top center scroll;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            background-size: cover;
            -o-background-size: cover;
        }

        a {
            display: block;
            width: 100%;
            height: 100%;
            min-height: 650px;
        }

        .background.background-sm {
			-webkit-background-size: auto 70%;
            -moz-background-size: auto 70%;
            background-size: auto 70%;
            -o-background-size: auto 70%;
			height: 650px !important;
        }

        .background.background-xs {
            -webkit-background-size: 170% auto;
            -moz-background-size: 170% auto;
            background-size: 170% auto;
            -o-background-size: 170% auto;
			height: 650px !important;
        }
    </style>

    <script type="text/JavaScript">
        setTimeout("location.href = '@Url.Content(ViewBag.ReturnUrl)';", 15000);
    </script>
</head>
<body>
    <a href="@Url.Content(ViewBag.ReturnUrl)" title="เข้าสู่ระบบ ศูนย์กลางบริการภาครัฐเพื่อภาคธุรกิจ">
        <div class="background hidden-xs hidden-sm">
        </div>
        <div class="background background-sm hidden-xs hidden-md hidden-lg">
        </div>
        <div class="background background-xs hidden-sm hidden-md hidden-lg">
        </div>
    </a>
</body>
</html>
